{
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "plugins": [
    "flowtype"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": "off",
    "strict": [2, "global"]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "env": {
    "node": true
  },
}
